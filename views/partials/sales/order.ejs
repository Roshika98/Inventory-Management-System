<div class="row">
    <div class="bg-gradient-success shadow-primary border-radius-lg pt-4 pb-3">
        <h3 class="text-white text-capitalize ps-3">Order Details</h3>
    </div>
</div>


<div class="row">
    <div class="col-md-7 mt-4">
        <div class="card">
            <div class="card-header pb-0 px-3">
                <h6 class="mb-0">Item Information</h6>
            </div>
            <div class="card-body pt-4 p-3">
                <ul class="list-group">
                    <% for( let i = 0; i < items.length; i++ ) { %>
                    <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                        <div class="d-flex flex-column">
                            <h6 class="mb-3 text-sm"><%= items[i].item_code %> </h6>
                            <span class="mb-2 text-xs">Item name: <span
                                    class="text-dark font-weight-bold ms-sm-2"><%= items[i].item_name %></span></span>
                            <span class="mb-2 text-xs">Item price: <span class="text-dark ms-sm-2 font-weight-bold">Rs
                                    <%= items[i].item_price %></span></span>
                            <span class="text-xs">Item quantity: <span
                                    class="text-dark ms-sm-2 font-weight-bold"><%= items[i].item_quantity %></span></span>
                        </div>
                        <div class="ms-auto text-end">
                            <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="javascript:;"><i
                                    class="material-icons text-sm me-2">delete</i>Delete</a>
                            <a class="btn btn-link text-dark px-3 mb-0" href="javascript:;"><i
                                    class="material-icons text-sm me-2">edit</i>Edit</a>
                        </div>
                    </li>
                    <% } %>

                </ul>
            </div>
        </div>
    </div>


    <div class="col-md-5 mt-4">
        <div class="card mb-4">
            <div class="card-header pb-0 px-3">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="mb-0">Place Order</h6>
                    </div>
                    <div class="col-md-6 d-flex justify-content-start justify-content-md-end align-items-center">
                        <i class="material-icons me-2 text-lg">date_range</i>
                        <% var today=new Date() %>
                        <% var date= today.getFullYear()+" - "+(today.getMonth()+1)+" - "+today.getDate() %>
                        <small><%= date %></small>
                    </div>
                </div>
            </div>
            <div class="card-body pt-4 p-3">
                <% var grandTot=0 %>
                <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3">Products</h6>
                <ul class="list-group">
                    <% for( let i = 0; i < items.length; i++ ) { %>
                    <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                        <div class="d-flex align-items-center">
                            <button
                                class="btn btn-icon-only btn-rounded btn-outline-success mb-0 me-3 p-3 btn-sm d-flex align-items-center justify-content-center"><i
                                    class="material-icons text-lg">expand_less</i></button>
                            <div class="d-flex flex-column">
                                <h6 class="mb-1 text-dark text-sm"><%= items[i].item_name %></h6>
                                <span class="text-xs">Quantity: <%= items[i].item_quantity %></span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center text-success text-gradient text-sm font-weight-bold">
                            + Rs <% var price=parseInt(items[i].item_quantity) * parseFloat(items[i].item_price) %>
                            <% grandTot+=price %>
                            <%= price %>
                        </div>
                    </li>
                    <% } %>

                </ul>
                <h6 class="text-uppercase text-body text-xs font-weight-bolder my-3">Total amount to be paid</h6>
                <ul class="list-group">
                    <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                        <div class="d-flex align-items-center">
                            <button
                                class="btn btn-icon-only btn-rounded btn-outline-success mb-0 me-3 p-3 btn-sm d-flex align-items-center justify-content-center"><i
                                    class="material-icons text-lg">expand_less</i></button>
                            <div class="d-flex flex-column">
                                <h6 class="mb-1 text-dark text-sm">Payment</h6>
                            </div>
                        </div>
                        <div class="d-flex align-items-center text-success text-gradient text-sm font-weight-bold">
                            Rs <%= grandTot %>
                        </div>
                    </li>
                    <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                        <a href="http://localhost:3000/NegomboHardware/logout" type="button"
                            class="btn btn-primary">Confirm Order</a>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Discard</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</div>