<% if (products.length>0) { %>
<% for( let i = 0; i < products.length; i++ ) { %>
<% if (i==0) { %>
<div class="row">
    <% } %>
    <% if (i%4===0) { %>
</div>
<div class="row">
    <% } %>
    <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="card card-stats">
            <div class="card-header p-3 pt-2 bg-gradient-success">
                <h6><%= products[i].name %></h6>
                <p class="mb-0">Rs <%= products[i].unit_price %> </p>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-body p-3">
                <!-- <div class="row"> -->
                <p class="text-sm mb-0"><%= products[i].product_details %></p>
                <!-- </div> -->
                <hr class="dark horizontal my-0">
                <br>
                <!-- <div class="row"> -->
                <p class="mb-0"><span class="text-success text-sm font-weight-bolder"><%= products[i].quantity %></span>
                    stocks available</p>
                <!-- </div> -->
            </div>
            <div class="card-footer p-3">
                <div class="input-group no-border">
                    <input type="number" class="form-control cartQuantity" placeholder="Quantity" id="quantity" min="0"
                        value="0" max="<%= products[i].quantity %>">
                </div>
                <br>
                <button type="button" class="btn btn-primary itemCart" data-itemCode="<%= products[i].item_code %>"
                    <% if (products[i].quantity<10) { %> disabled='true' <% } %>>add
                    item to order</button>
            </div>
        </div>
    </div>
    <% } %>
</div>
<% } else { %>
<div>
    <h6> No such item exists!</h6>
</div>
<% } %>