<% if (products.length>0) { %>
<% for( let i = 0; i < products.length; i++ ) { %>
<% if (i==0) { %>
<div class="row">
    <% } %>
    <% if (i%4===0) { %>
</div>
<div class="row">
    <% } %>
    <div class="col-xl-3 col-sm-6">
        <div class="card">
            <div class="card-header p-3 pt-2">
                <div class="text-end pt-1">
                    <p class="text-sm mb-0 text-capitalize font-weight-bolder"><%= products[i].name %></p>
                    <h4 class="mb-0">Rs <%= products[i].unit_price %> </h4>
                </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-body p-3">
                <div class="row">
                    <p class="text-sm mb-0"><%= products[i].product_details %></p>
                </div>
                <hr class="dark horizontal my-0">
                <br>
                <div class="row">
                    <p class="mb-0"><span
                            class="text-success text-sm font-weight-bolder"><%= products[i].quantity %></span>
                        stocks available</p>
                </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
                <div class="input-group input-group-outline">
                    <label class="form-label"></label>
                    <input type="number" class="form-control" placeholder="Quantity">
                </div>
                <br>
                <a href="" type="button" class="btn btn-primary">add
                    item to order</a>
            </div>
        </div>
    </div>
    <% } %>
</div>
<% } else { %>
<div>
    <h5>No such item exists!</h5>
</div>
<% } %>