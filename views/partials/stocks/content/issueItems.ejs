<div class="col-md-12">
    <div class="card mb-4">
        <div class="card-header pb-0 px-3">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="mb-0" id="orderID" data-orderID="<%= orderID %>">Order ID : <span
                            class="text-secondary text-xs"><%= orderID.slice(0,13) %>...</span>
                    </h6>
                </div>
                <div class="col-md-6 d-flex justify-content-start justify-content-md-end align-items-center">
                    <i class="nc-icon nc-calender60"></i>
                    <% var today=new Date() %>
                    <% var date= today.getFullYear()+" - "+(today.getMonth()+1)+" - "+today.getDate() %>
                    <small><%= date %></small>
                </div>
            </div>
        </div>
        <div class="card-body pt-4 p-3">
            <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3">Products</h6>
            <ul class="list-group">
                <% for( let i = 0; i < items.length; i++ ) { %>
                <li class="list-group-item border-2 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                    <div class="d-flex align-items-center">

                        <div class="d-flex flex-column">
                            <h6 class="mb-1 text-dark text-sm"><%= items[i].itemName %></h6>
                            <span class="text-xs">Quantity: <%= items[i].itemQuantity %></span>
                            <span class="text-xs">Store Location: <%= items[i].itemLocation %></span>
                        </div>
                    </div>
                    <!-- <div class="d-flex align-items-center text-success text-gradient text-sm font-weight-bold">
                        
                    </div> -->
                </li>
                <% } %>

